@model IEnumerable<IRRM.Models.IncidentSubOutcome_M>




<script src="@Url.Content("~/assets/js/jquery.min.js")"></script>
<link href="@Url.Content("~/assets/plugins/datatables/jquery.dataTables.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/assets/plugins/datatables/buttons.bootstrap.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/assets/plugins/datatables/dataTables.bootstrap.min.css")" rel="stylesheet" type="text/css" />
@{

    ViewBag.Title = "Index";
}
<style>
    .form-control {
        width: 100%;
    }
</style>


<div class="content-page">
    <!-- Start content -->
    <div class="content">

        <div class="container">

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-primary">
                        <div class="panel-body">
                            <h2 class="col-md-6">Incident Sub Outcome</h2>
                            <a class="btn btn btn-success pull-right" data-toggle="modal" data-target="#AddForm">Create Incident Sub Outcome</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>



        <div class="page-content-wrapper ">

            <div class="container">



                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-primary">
                            <div class="panel-body">




                                <table id="datatable-buttons" class="table table-striped table-bordered">


                                    <tr>
                                        <th class="col-md-2">
                                            Incident Main Outcome
                                        </th>
                                        <th>
                                            Incident Sub Outcome
                                        </th>

                                        <th class="col-md-1">Answer Type</th>
                                        <th class="col-md-1">Action</th>
                                    </tr>




                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IncidentMainOutcome_M.IncidentMainOutcome)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IncidentSubOutcome)

                                                @if (item.AnswerType == 2)
                                                {
                                                    <br style="clear:both" />
                                                    <br style="clear:both" />
                                                    <form id="choiceform-@item.IncidentSubOutcomeID">
                                                        <table class="col-md-12">
                                                            <tr>
                                                                <td>
                                                                    <input type="hidden" name="IncidentSubOutcomeID" value="@item.IncidentSubOutcomeID" />
                                                                    <input type="text" class="form-control" name="Choice" id="Choice-@item.IncidentSubOutcomeID" required />
                                                                </td>
                                                                <td style="width:40px;text-align:center"><input type="submit" value="+" class="btn btn-danger" /></td>
                                                            </tr>
                                                        </table>
                                                    </form>
                                                    <script>

                                                    $(document).ready(function () {
                                                        loadsubOutcomechoice(@item.IncidentSubOutcomeID);

                                                        $("#choiceform-" +@item.IncidentSubOutcomeID).submit(function (e) {
                                                            e.preventDefault();
                                                            var formdata = new FormData(this);

                                                            $.ajax({
                                                                method: "POST",
                                                                url: "@Url.Content("~/IncidentSubOutcome_M/AddChoice")",
                                                                data: formdata,
                                                                contentType: false,
                                                                cache: false,
                                                                processData: false,
                                                                success: function (data) {
                                                                    $("#Choice-@item.IncidentSubOutcomeID").val('');
                                                                    loadsubOutcomechoice(@item.IncidentSubOutcomeID);
                                                                },
                                                                error: function () {
                                                                    alert('Unable to add! ');
                                                                }
                                                            });
                                                        });
                                                    });
                                                    </script>
                                                    <br style="clear:both" />
                                                    <br style="clear:both" />
                                                    <div id="choicetable-@item.IncidentSubOutcomeID"></div>
                                                }

                                            </td>

                                            <td>
                                                @if (item.AnswerType == 1)
                                                {
                                                    <span>Textbox</span>
                                                }
                                                else if (item.AnswerType == 2)
                                                {
                                                    <span>Choices</span>
                                                }
                                            </td>


                                            <td>
                                                @*<a data-toggle="modal" data-target="#Edit-@item.IncidentSubOutcomeID" style="cursor:pointer"><i title="Edit" class="fa fa-edit" style="color:orangered"></i></a>&nbsp;&nbsp;&nbsp;*@<a data-toggle="modal" data-target="#Delete-@item.IncidentSubOutcomeID" style="cursor:pointer"><i class="fa fa-trash" style="color:orangered" title="Delete"></i></a>
                                            </td>
                                        </tr>
                                    }






                                </table>
                            </div>
                        </div>

                    </div>
                </div>

            </div>


        </div>
    </div>
</div>


@foreach (var item in Model)
{

    <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="Delete-@item.IncidentSubOutcomeID">
        <div class="modal-dialog modal-lg">

            <div class="modal-content">
                <div class="modal-header">

                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h5 class="modal-title" id="exampleModalLongTitle">Delete Incident Sub Outcome</h5>


                </div>
                <div class="modal-body">

                    @{
                        Html.RenderAction("Delete", new { id = item.IncidentSubOutcomeID });
                    }
                </div>

            </div>
        </div>
    </div>




    <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="Edit-@item.IncidentSubOutcomeID">
        <div class="modal-dialog modal-lg">

            <div class="modal-content">
                <div class="modal-header">

                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h5 class="modal-title" id="exampleModalLongTitle">Edit Incident Sub Outcome</h5>


                </div>
                <div class="modal-body">

                    @{
                        Html.RenderAction("Edit", new { id = item.IncidentSubOutcomeID });
                    }
                </div>

            </div>
        </div>
    </div>

                        }

<!-- Modal -->
<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="AddForm">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Incident Sub Outcome</h4>

            </div>
            <br style="clear:both" />
            @{
                Html.RenderAction("Create");
            }


        </div>
    </div>
</div>
<script>


    function loadsubOutcomechoice(choiceid) {
        var recos = '<table class="table table-striped table-bordered" style="width:100%">';

        $.ajax({
            method: "GET",
            url: "@Url.Content("~/ViewChoiceOutcome/")" + choiceid,
            contentType: false,
            cache: false,
            processData: false,
            success: function (data) {
                $.each(data, function (key, value) {
                    recos += '<tr><td><div style="width:20px;height:20px;border:1px solid #ccc;float:left;margin-right:10px;"></div> ' + data[key].ChoiceAnswer + '</td><td style="width:20px;text-align:centre"><i class="fa fa-trash" style="color:orangered;cursor:pointer" title="Delete" onclick="deletechoice(' + choiceid + ',' + data[key].AnswerChoiceID +')"></i></td></tr>';
                });
                recos += '</table>'
                $("#choicetable-" + choiceid).html(recos);


            },
            error: function () {
            }
        });
    }


    function deletechoice(choiceid, answerchoiceid) {
        if (confirm("Are you sure to delete?")) {

            $.ajax({
                method: "GET",
                url: "@Url.Content("~/DeleteChoiceOutcome/")" + choiceid + "/" + answerchoiceid,
                contentType: false,
                cache: false,
                processData: false,
                success: function (data) {
                    window.location.reload();
                },
                error: function () {
                }
            });

        }

    }


</script>

