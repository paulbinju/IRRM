@model IRRM.Models.Department_M

@{
    Layout = null;
}

 
    <h3>Are you sure you want to delete this?</h3>
    <div>
 
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Department)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Department)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Active)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Active)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Branch_M.Branch)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Branch_M.Branch)
            </dd>

        </dl>

        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "delform-" + Html.DisplayFor(model => model.DepartmentID) }))
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        }


    </div>

    <script>
    $(document).ready(function () {
        $("#delform-"+@Html.DisplayFor(model => model.DepartmentID)).submit(function (e) {
            e.preventDefault();
            var formdata = new FormData(this);

          //  alert($("#DFormID").val());
            $.ajax({
                method: "POST",
                url: "@Url.Content("~/Department_M/Delete/" + Html.DisplayFor(model => model.DepartmentID))",
                data: formdata,
                mimeTypes: "multipart/form-data",
                contentType: false,
                cache: false,
                processData: false,
                success: function (data) {
                   // alert('Successfully deleted!');
                    window.location.href = "@Url.Content("~/Department_M")";
                },
                error: function () {
                    alert('Unable to delete, try editing instead!');
                }
            });
        });
    });
    </script>