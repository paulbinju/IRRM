@model IRRM.Models.RiskSeverity_M

@{
    Layout = null;
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "editform" }))
{
        @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RiskSeverityID)

        <div class="form-group">
            <div class="control-label col-md-3"><b>Risk Score <span class="red">*</span> </b></div>
            <div class="col-md-9">
                @Html.DropDownList("RiskScoreID", null, htmlAttributes: new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(model => model.RiskScoreID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-3"><b>Risk Descriptor <span class="red">*</span> </b></div>

            <div class="col-md-9">
                @Html.DropDownList("RiskDescriptorID", null, htmlAttributes: new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(model => model.RiskDescriptorID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-3"><b>Risk Severity <span class="red">*</span> </b></div>

            <div class="col-md-9">
                @Html.EditorFor(model => model.RiskSeverity, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.RiskSeverity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Comments, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Comments, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Active, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                <div class="">
                   @Html.CheckBoxFor(model => model.Active, new { @checked = "checked" })
                    @Html.ValidationMessageFor(model => model.Active, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Save" class="btn btn-danger" />
            </div>
        </div>
    </div>
}


<script>
    $(document).ready(function () {
        $("#editform").submit(function (e) {
            e.preventDefault();
            var formdata = new FormData(this);

          //  alert($("#DFormID").val());
            $.ajax({
                method: "POST",
                url: "@Url.Content("~/RiskSeverity_M/Edit")",
                data: formdata,
                mimeTypes: "multipart/form-data",
                contentType: false,
                cache: false,
                processData: false,
                success: function (data) {
                   // alert('Successfully deleted!');
                    window.location.href = "@Url.Content("~/RiskSeverity_M")";
                },
                error: function () {
                    alert('Error');
                }
            });
        });
    });
</script>