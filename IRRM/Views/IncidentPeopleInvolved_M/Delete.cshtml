<script>
    $(document).ready(function () {
        $("#delform-"+@Html.DisplayFor(model => model.IncidentPeopleInvolvedID)).submit(function (e) {
            e.preventDefault();
            var formdata = new FormData(this);

          //  alert($("#DFormID").val());
            $.ajax({
                method: "POST",
                url: "@Url.Content("~/IncidentPeopleInvolved_M/Delete/" + Html.DisplayFor(model => model.IncidentPeopleInvolvedID))",
                data: formdata,
                mimeTypes: "multipart/form-data",
                contentType: false,
                cache: false,
                processData: false,
                success: function (data) {
                   // alert('Successfully deleted!');
                    window.location.href = "@Url.Content("~/IncidentPeopleInvolved_M")";
                },
                error: function () {
                    alert('Unable to delete, try editing instead! ');
