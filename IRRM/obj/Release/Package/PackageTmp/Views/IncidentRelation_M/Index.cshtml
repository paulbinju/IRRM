@model IEnumerable<IRRM.Models.IncidentRelation_M>

 
 



<script src="@Url.Content("~/assets/js/jquery.min.js")"></script>
<link href="@Url.Content("~/assets/plugins/datatables/jquery.dataTables.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/assets/plugins/datatables/buttons.bootstrap.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/assets/plugins/datatables/dataTables.bootstrap.min.css")" rel="stylesheet" type="text/css" />

<style>
    .form-control {
        width: 100%;
    }
</style>


<div class="content-page">
    <!-- Start content -->
    <div class="content">

        <div class="container">

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-primary">
                        <div class="panel-body">
                            <h2 class="col-md-6">Incident Relation</h2>
                            @*<a class="btn btn btn-success pull-right" data-toggle="modal" data-target="#AddForm">Create Incident Relation</a>*@

                        </div>
                    </div>
                </div>
            </div>
        </div>



        <div class="page-content-wrapper ">

            <div class="container">



                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-primary">
                            <div class="panel-body">


                                



                                <table id="datatable-buttons" class="table table-striped table-bordered">
                                    <tr>
                                        <th>
                                            Incident Relation 
                                        </th>
                                     
                                        
                                        <th>
                                            Send Email 
                                        </th>
                                        <th>
                                         Email Subject 
                                        </th>
                                        <th>
                                          Email Header 
                                        </th>
                                        <th>
                                          Email Footer 
                                        </th>
                                        <th>
                                            Comments  
                                        </th>
                                        <th class="col-md-1">
                                            Active 
                                        </th>
                                        <th class="col-md-1">Action</th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IncidentRelation)
                                            </td>
                                          
                                         
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SendEmail)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EmailSubject)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EmailHeader)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EmailFooter)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Comments)
                                            </td> <td>
                                                @Html.DisplayFor(modelItem => item.Active)
                                            </td>
                                            <td>
                                                <a data-toggle="modal" data-target="#Edit-@item.IncidentRelationID" style="cursor:pointer"><i title="Edit" class="fa fa-edit"  style="color:orangered"></i></a>&nbsp;&nbsp;&nbsp;@*<a data-toggle="modal" data-target="#Delete-@item.IncidentRelationID" style="cursor:pointer"><i class="fa fa-trash" style="color:orangered" title="Delete"></i></a>*@
                                            </td>
                                        </tr>
                                    }

                                </table>








 
                            </div>
                        </div>

                    </div>
                </div>

            </div>


        </div>
    </div>
</div>

@foreach (var item in Model)
{
    <div class="modal fade" id="Delete-@item.IncidentRelationID" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">


            <div class="modal-content">
                <div class="modal-header">

                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h5 class="modal-title" id="exampleModalLongTitle">Delete Incident Relation</h5>


                </div>
                <div class="modal-body">

                    @{
                        Html.RenderAction("Delete", new { id = item.IncidentRelationID });
                    }
                </div>

            </div>
        </div>
    </div>

 
            <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true"  id="Edit-@item.IncidentRelationID">
                <div class="modal-dialog modal-lg">

                    <div class="modal-content">
                        <div class="modal-header">

                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <h5 class="modal-title" id="exampleModalLongTitle">Edit Incident Relation</h5>


                        </div>
                        <div class="modal-body">

                            @{
                                Html.RenderAction("Edit", new { id = item.IncidentRelationID });
                            }
                        </div>

                    </div>
                </div>
            </div>

            }






            <!-- Modal -->
            <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="AddForm">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">

                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <h4 class="modal-title">Incident Relation</h4>

                        </div>
                        <br style="clear:both" />
                        @{
                            Html.RenderAction("Create");
                        }


                    </div>
                </div>
            </div>


            <!-- Datatables-->
            <script src="@Url.Content("~/assets/plugins/datatables/jquery.dataTables.min.js")"></script>
            <script src="@Url.Content("~/assets/plugins/datatables/dataTables.bootstrap.js")"></script>
            <script src="@Url.Content("~/assets/plugins/datatables/dataTables.buttons.min.js")"></script>
            <script src="@Url.Content("~/assets/plugins/datatables/buttons.bootstrap.min.js")"></script>
            <script src="@Url.Content("~/assets/plugins/datatables/jszip.min.js")"></script>
            <script src="@Url.Content("~/assets/plugins/datatables/pdfmake.min.js")"></script>
            <script src="@Url.Content("~/assets/plugins/datatables/vfs_fonts.js")"></script>
            <script src="@Url.Content("~/assets/plugins/datatables/buttons.html5.min.js")"></script>
            <script src="@Url.Content("~/assets/plugins/datatables/buttons.print.min.js")"></script>


            <script src="@Url.Content("~/assets/pages/datatables.init.js")"></script>
