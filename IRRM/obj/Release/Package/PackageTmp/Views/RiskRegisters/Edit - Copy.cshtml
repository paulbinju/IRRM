                                                        <option value="">Select</option>
                                                        @foreach (var x in ViewBag.RiskDescriptorID)
                                                        {
                                                            <option @(Model.RiskDescriptorID == x.RiskDescriptorID ? "selected" : "")  value="@x.RiskDescriptorID">@x.RiskDescriptor</option>
                                                        }
                                                    </select>

