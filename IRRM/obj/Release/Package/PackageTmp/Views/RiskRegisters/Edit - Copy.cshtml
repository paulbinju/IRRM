                                                    <select class="form-control" name="RiskStatusID" required>
                                                        <option value="">Select</option>
                                                        @foreach (var x in ViewBag.RiskStatusID)
                                                        {
                                                            <option @(Model.RiskStatusID == x.RiskStatusID ? "selected" : "")  value="@x.RiskStatusID">@x.RiskStatus</option>
                                                        }
                                                    </select>

