                                                            <td style="background-color:#34d024;text-align:center"><input @(Model.RARating == 2 ? "checked" : "")  type="radio" name="Impact" value="2" onclick="calImpact(this.value)" /></td>
                                                            <td style="background-color:#34d024;text-align:center"><input @(Model.RARating == 4 ? "checked" : "")  type="radio" name="Impact" value="4" onclick="calImpact(this.value)" /></td>
                                                            <td style="background-color:#34d024;text-align:center"><input @(Model.RARating == 6 ? "checked" : "")  type="radio" name="Impact" value="6" onclick="calImpact(this.value)" /></td>
                                                            <td style="background-color:#34d024;text-align:center"><input @(Model.RARating == 8 ? "checked" : "")  type="radio" name="Impact" value="8" onclick="calImpact(this.value)" /></td>
                                                            <td style="background-color:#ffd800;text-align:center"><input @(Model.RARating == 10 ? "checked" : "")  type="radio" name="Impact" value="10" onclick="calImpact(this.value)" /></td>

                                                        </tr>
                                                        <tr>
                                                            <th style="height:60px;vertical-align:middle">Rare</th>
                                                            <td style="background-color:#34d024;text-align:center"><input @(Model.RARating == 1 ? "checked" : "")  type="radio" name="Impact" value="1" onclick="calImpact(this.value)" /></td>
                                                            <td style="background-color:#34d024;text-align:center"><input @(Model.RARating == 2 ? "checked" : "")  type="radio" name="Impact" value="2" onclick="calImpact(this.value)" /></td>
                                                            <td style="background-color:#34d024;text-align:center"><input @(Model.RARating == 3 ? "checked" : "")  type="radio" name="Impact" value="3" onclick="calImpact(this.value)" /></td>
                                                            <td style="background-color:#34d024;text-align:center"><input @(Model.RARating == 4 ? "checked" : "")  type="radio" name="Impact" value="4" onclick="calImpact(this.value)" /></td>
                                                            <td style="background-color:#34d024;text-align:center"><input @(Model.RARating == 5 ? "checked" : "")  type="radio" name="Impact" value="5" onclick="calImpact(this.value)" /></td>

                                                        </tr>
                                                    </table>
                                                    <script>
                                                        function calImpact(Impactval) {

                                                            $("#RARating").val(Impactval);
                                                            if (Impactval <= 9) {
                                                                $("#RARiskLevel").val('LOW');

                                                            }
                                                            else if (Impactval >= 10 && Impactval <= 15) {
                                                                $("#RARiskLevel").val('MODERATE');
                                                            }
                                                            else if (Impactval == 20) {
                                                                $("#RARiskLevel").val('HIGH');
                                                            }
                                                            else if (Impactval == 25) {
                                                                $("#RARiskLevel").val('EXTREME');
                                                            }

                                                        }
                                                    </script>
                                                </div>
                                            </div>
                                        </div>
