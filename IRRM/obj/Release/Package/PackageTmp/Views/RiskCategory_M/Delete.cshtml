@model IRRM.Models.RiskCategory_M

@{
    Layout = null;
}

<style>
    .dl-horizontal dt {
        width: 250px;
        margin-right: 15px;
    }
</style>
<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RiskCategory)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RiskCategory)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Comments)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comments)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Active)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Active)
        </dd>

    </dl>


    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "delform-" + Html.DisplayFor(model => model.RiskCategoryID) }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    }


</div>

<script>
    $(document).ready(function () {
        $("#delform-"+@Html.DisplayFor(model => model.RiskCategoryID)).submit(function (e) {
            e.preventDefault();
            var formdata = new FormData(this);

          //  alert($("#DFormID").val());
            $.ajax({
                method: "POST",
                url: "@Url.Content("~/RiskCategory_M/Delete/"+ Html.DisplayFor(model => model.RiskCategoryID))",
                data: formdata,
                mimeTypes: "multipart/form-data",
                contentType: false,
                cache: false,
                processData: false,
                success: function (data) {
                    // alert('Successfully deleted!');
                    window.location.href = "@Url.Content("~/RiskCategory_M")";
                },
                error: function () {
                    alert('Unable to delete, try editing instead!');
                }
            });
        });
    });
</script>